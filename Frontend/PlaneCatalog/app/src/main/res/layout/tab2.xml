<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutIDTab2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/friendList"
        android:layout_width="match_parent"
        android:layout_height="615dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/textView1321"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/searchForUserText"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:text="Search for users:"
        android:textSize="18sp"
        tools:background="@color/grayBack" />

    <EditText
        android:id="@+id/searchForUserText"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:background="@color/grayBack"
        android:contentDescription="Introduce an username:"
        android:ems="10"
        android:inputType="textPersonName"
        tools:text="Introduce an username:" />

</RelativeLayout>